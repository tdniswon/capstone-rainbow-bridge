<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">

    <div class="form-group col-md-2">
      <label for="">Employee Status</label>
      <%= form.collection_select(:employee_status_id, EmployeeStatus.all, :id, :employee_status_name, {prompt: "Select One..."}, {class: "form-control"}) %>
    </div>
    
    <div class="form-group col-md-2">
      <label for="">Employee Type</label>
      <%= form.collection_select(:employee_type_id, EmployeeType.all, :id, :employee_type_description, {prompt: "Select One..."}, {class: "form-control"}) %>
    </div>

    <div class="form-group col-md-3">
      <label for="">First Name</label>
      <%= form.text_field :employee_first_name, class: "form-control",placeholder:"Jane" %>
    </div>

    <div class="form-group col-md-5">
      <label for="">Last Name</label>
      <%= form.text_field :employee_last_name, class: "form-control",placeholder:"Doe" %>
    </div> 

    
  </div> 

  <div class="form-row">
    <div class="form-group col-md-8">
      <label for="">Email</label>
      <%= form.text_field :employee_email, class: "form-control",placeholder:"example@gmail.com" %>
    </div>

    <div class="form-group col-md-4">
      <label for="inputPhone">Phone Number</label>
      <%= form.text_field :employee_phone, class: "form-control", placeholder: "XXX-XXX-XXXX" %>
    </div>

  </div> 
    </form>
    <button type="submit" class="btn btn-primary">Create Employee</button>
    <br>
<% end %>
