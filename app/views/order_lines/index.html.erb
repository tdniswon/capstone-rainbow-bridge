<div class="container-fluid">
  <p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Order Content</h1>
</div>
  <nav class="navbar navbar-light bg-light">
    <form class="form-inline">
      <%= search_form_for @q do |f| %>
          <%= f.search_field :order_line_status_order_line_status_name_cont, placeholder: "Order Status" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :order_order_description_cont, placeholder: "Order" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :product_product_name_cont, placeholder: "Product Name" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :order_line_description_cont, placeholder: "Description" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :order_line_start_date_cont, placeholder: "Start Date" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :order_line_finish_date_cont, placeholder: "Finish Date" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

        <%= search_form_for @q do |f| %>
          <%= f.search_field :special_order_notes_cont, placeholder: "Special Notes" %>&nbsp;&nbsp;&nbsp;
          <%= f.submit %>
        <% end %>

    </form>
    <%= link_to 'New Order Content', new_order_line_path, class: "btn btn-primary" %>
    <table id= "order_line_table" class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col"><%= sort_link(@q, :order_line_status_id, "Status", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :order_description, "Order", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :product_id, "Product", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :order_line_description, "Description", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :order_line_start_date, "Start Date", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :order_line_finish_date, "Finish Date", default_order: :desc) %></th>
          <th scope="col"><%= sort_link(@q, :special_order_notes, "Special notes", default_order: :desc) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @order_lines.each do |order_line| %>
          <tr>
            <td><%= order_line.order_line_status.order_line_status_name %></td>
            <td><%= order_line.order.order_description %></td>
            <td><%= order_line.product.product_name %></td>
            <td><%= order_line.order_line_description %></td>
            <td><%= order_line.order_line_start_date.try(:strftime,"%B %e, %l:%M %p") %></td>
            <td><%= order_line.order_line_finish_date.try(:strftime,"%B %e, %l:%M %p") %></td>
            <td><%= order_line.special_order_notes %></td>
            <td><%= link_to 'Show', order_line %></td>
            <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
            <td><%= link_to 'Archive', archive_order_line_path(order_line),method: :patch  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%==pagy_bootstrap_nav(@pagy)%>
  </nav>
  <br>
  
</div>
