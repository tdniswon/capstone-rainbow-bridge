    <input class="form-control mr-sm-2" type="search" aria-label="Search"  id="seventhInput" onkeyup="due()" placeholder="Search by Due Date" title="Type Customer's Name">
    <input class="form-control mr-sm-2" type="search" aria-label="Search"  id="eigthInput" onkeyup="finish()" placeholder="Search by Finish Date" title="Type Customer's Name">
    <input class="form-control mr-sm-2" type="search" aria-label="Search"  id="ninthInput" onkeyup="delivery()" placeholder="Search by Delivery" title="Type Customer's Name">
