    <input class="form-control mr-sm-2" type="search" aria-label="Search"  id="thirteenthInput" onkeyup="zip()" placeholder="Search by Zip Code" title="Type Customer's Name">

  </form>
<%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
  <table id = "order_table" class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col"><%= sortable "order_status_id", "Status" %></th>
        <th scope="col"><%= sortable "order_type_id", "Type" %></th>
        <th scope="col"><%= sortable "customer_last_name", "Name" %></th>
        <th scope="col"><%= sortable "order_description", "Description" %></th>
        <th scope="col"><%= sortable "order_cost", "Cost" %></th>
        <th scope="col"><%= sortable "order_start_date", "Start" %></th>
        <th scope="col"><%= sortable "order_due_date", "Due" %></th>
        <th scope="col"><%= sortable "order_date_finish", "Finish" %></th>
        <th scope="col"><%= sortable "order_delivery", "Delivery" %></th>
        <th scope="col"><%= sortable "delivery_street_address", "Address" %></th>
        <th scope="col"><%= sortable "delivery_city", "City" %></th>
        <th scope="col"><%= sortable "delivery_state", "State" %> </th>
        <th scope="col"><%= sortable "delivery_zip_code", "Zip" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_status.order_status_name %></td>
          <td><%= order.order_type.order_description %></td>
          <td><%= order.customer.customer_first_name %> <%= order.customer.customer_last_name %></td>
          <td><%= order.order_description %></td>
          <td><%= order.order_cost %></td>
          <td><%= order.order_start_date.try(:strftime,"%B %e, %l:%M %p") %></td>
          <td><%= order.order_due_date.try(:strftime,"%B %e, %l:%M %p") %></td>
          <td><%= order.order_date_finish.try(:strftime,"%B %e, %l:%M %p") %></td>
          <td><% order.order_delivery %>
            <% if order.order_delivery == true %>
            <%= image_tag "check.png", class: "check"%>
            <% else %>
              <%= image_tag "cross.png", class: "cross"%>
            <% end %></td>
          <td><%= order.delivery_street_address %></td>
          <td><%= order.delivery_city %></td>
          <td><%= order.delivery_state %></td>
          <td><%= order.delivery_zip_code %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Archive', archive_order_path(order),method: :patch  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%==pagy_bootstrap_nav(@pagy)%>
</nav>
  <br>
  <script>
  function status() {
    var input, filter, table, tr, td, i, txtValue;
    input = document.getElementById("firstInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("order_table");
    tr = table.getElementsByTagName("tr");
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td")[0];
      if (td) {
        txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  }
  </script>
