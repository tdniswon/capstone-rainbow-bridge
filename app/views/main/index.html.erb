<% @inquiries = Order.where(order_status_id: 1) %>
<% @inprogress = Order.where(order_status_id: 2) %>

<div class="container text-center">
    <h2>Create</h2>
    <%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
    <%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
    <!--
    <h2>View</h2>
    <%= link_to 'Customers', main_app.customers_path, class: "btn btn-primary" %>
    <%= link_to 'Orders', main_app.orders_path, class: "btn btn-primary" %>
    -->
</div>

<br>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h2 class="sub-header text-center">Order Inquiries</h2>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Order Description</th>
                        <th>Order Due Date</th>
                        <th>Customer Name</th>
                        <th>Phone Number</th>
                         <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @inquiries.each do |inquiry| %>
                        <tr>
                            <td><%= inquiry.order_description %></td>
                            <td><%= inquiry.order_due_date.to_formatted_s(:long_ordinal) %></td>
                            <td><%= inquiry.customer.customer_first_name %> <%= inquiry.customer.customer_last_name %></td>
                            <td><%= inquiry.customer.customer_phone %></td>
                            <td><%= link_to 'Show', inquiry %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h2 class="sub-header text-center">In Progress Orders</h2>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Order Description</th>
                        <th>Order Due Date</th>
                        <th>Customer Name</th>
                        <th>Phone Number</th>
                         <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @inprogress.each do |ip| %>
                        <tr>
                            <td><%= ip.order_description %></td>
                            <td><%= ip.order_due_date.to_formatted_s(:long_ordinal) %></td>
                            <td><%= ip.customer.customer_first_name %> <%= ip.customer.customer_last_name %></td>
                            <td><%= ip.customer.customer_phone %></td>
                            <td><%= link_to 'Show', ip %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>