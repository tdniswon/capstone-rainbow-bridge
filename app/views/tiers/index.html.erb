<div class="container-fluid">
  <p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Tiers</h1>
</div>
  <nav class="navbar navbar-light bg-light">
    <%= search_form_for @q, {class: "form-inline"} do |f| %>
      <%= f.search_field :order_line_id_or_position_or_tier_size_or_shape_shape_name_or_cake_flavor_flavor_name_or_frosting_flavor_frosting_name_or_tier_special_notes_start, placeholder: "Search", class: 'form-control' %>
      <th><%= f.submit class: "btn btn-primary" %>
    <% end %>
    <%= link_to 'New Tier', new_tier_path, class: "btn btn-primary" %>
    <table id="tier_table" class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th><%= sort_link(@q, :order_line_id, "Order Content", default_order: :desc) %></th>
          <th><%= sort_link(@q, :position, "Position", default_order: :desc) %></th>
          <th><%= sort_link(@q, :tier_size, "Tier Size", default_order: :desc) %></th>
          <th><%= sort_link(@q, :shape_name, "Shape", default_order: :desc) %></th>
          <th><%= sort_link(@q, :flavor_name, "Flavor", default_order: :desc) %></th>
          <th><%= sort_link(@q, :frosting_name, "Frosting", default_order: :desc) %></th>
          <th><%= sort_link(@q, :tier_special_notes, "Special Notes", default_order: :desc) %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tiers.each do |tier| %>
          <tr>
            <td><%= tier.order_line_id %></td>
            <td><%= tier.position %></td>
            <td><%= tier.tier_size %></td>
            <td><%= tier.shape.shape_name %></td>
            <td><%= tier.cake_flavor.flavor_name %></td>
            <td><%= tier.frosting_flavor.frosting_name %></td>
            <td><%= tier.tier_special_notes %></td>
            <td><%= link_to 'Show', tier %></td>
            <td><%= link_to 'Edit', edit_tier_path(tier) %></td>
            <td><%= link_to 'Delete', tier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%==pagy_bootstrap_nav(@pagy)%>
  </nav>

  <br>
  
</div>
